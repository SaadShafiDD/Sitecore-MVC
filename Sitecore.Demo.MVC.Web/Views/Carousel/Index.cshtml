@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Demo.MVC.Web.Models
@model CarouselVM

@if (Model != null && Model.Items != null)
{
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carousel" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @{ 
                var counter = 0;
            }
            @foreach (var item in Model.Items)
            {
                var activeClass = counter == 0 ? "active" : string.Empty;
                <div class="carousel-item @activeClass">
                    @Html.Sitecore().Field("Image", item)
                    <div class="carousel-caption">
                        <p class="animated fadeInRight">@Html.Sitecore().Field("SubTitle", item)</p>
                        <h1 class="animated fadeInLeft">@Html.Sitecore().Field("Title", item)</h1>
                        @Html.Sitecore().Field("CTA", item)
                    </div>
                </div>
                counter++;
            }
        </div>

        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}





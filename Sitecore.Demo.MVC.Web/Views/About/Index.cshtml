@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Demo.MVC.Web.Models
@model AboutVM

@if (Model != null && Model.Item != null)
{
    <div class="about wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-6">
                    <div class="about-img">
                        @Html.Sitecore().Field("Image", Model.Item)
                    </div>
                </div>
                <div class="col-lg-7 col-md-6">
                    <div class="section-header text-left">
                        <p>@Html.Sitecore().Field("Segment Text", Model.Item)</p>
                        <h2>@Html.Sitecore().Field("Title", Model.Item)</h2>
                    </div>
                    <div class="about-text">
                        @Html.Sitecore().Field("Description", Model.Item)
                        @Html.Sitecore().Field("CTA", Model.Item, new { @class="btn" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}




@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Demo.MVC.Web.Extensions
@using Sitecore.Links.UrlBuilders;
@model RenderingModel

@{
    ItemUrlBuilderOptions options = new ItemUrlBuilderOptions();
    options.LanguageEmbedding = Sitecore.Links.LanguageEmbedding.Never;
}

@if (Model != null && Model.PageItem != null)
{
    <!-- Page Header Start -->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>@Html.Sitecore().Field("Title", Model.PageItem)</h2>
                </div>
                <div class="col-12">
                    <a href="@Model.PageItem.Parent.GetItemUrl(options)">@Html.Sitecore().Field("Title", Model.PageItem.Parent)</a>
                    <a href="@Model.PageItem.GetItemUrl(options)">@Html.Sitecore().Field("Title", Model.PageItem)</a>
                </div>
            </div>
        </div>
    </div>
}
